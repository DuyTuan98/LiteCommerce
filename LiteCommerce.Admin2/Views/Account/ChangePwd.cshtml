
@{
    ViewBag.Title = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Lite Commerce | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/Themes/AdminLTE/index2.html"><b>Lite</b>Commerce</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Login to change password</p>


            @if (ViewBag.MessageSuccess != null)
            {
                <br />
                <div class="alert alert-success">
                    @ViewBag.MessageSuccess
                </div>
                <br />
            }

            @if (ViewBag.MessageInfo != null)
            {
                <br />
                <div class="alert alert-info">
                    @ViewBag.MessageInfo
                </div>
                <br />
            }
            @if (ViewData.ModelState.Keys.Contains(""))
            {
                <span class="text-danger">@Html.ValidationMessage("")</span>
            }
            <form action="~/Account/ChangePwd" method="post">
                <div class="form-group has-feedback">
                    <input name="email" type="email" class="form-control" placeholder="Email" value="@ViewBag.Email" required>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @if (ViewData.ModelState.ContainsKey("Email"))
                    {
                        <span class="has-error text-danger">
                            @Html.ValidationMessage("Email")
                        </span>
                    }

                </div>
                <div class="form-group has-feedback">
                    <input name="password" type="password" class="form-control" placeholder="Enter Old Password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @if (ViewData.ModelState.ContainsKey("Password"))
                    {
                        <span class="has-error text-danger">
                            @Html.ValidationMessage("Password")
                        </span>
                    }
                </div>
                <div class="form-group has-feedback">
                    <input name="newpassword1" type="password" class="form-control" placeholder="Enter New Password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @if (ViewData.ModelState.ContainsKey("NewPassword1"))
                    {
                        <span class="has-error text-danger">
                            @Html.ValidationMessage("NewPassword1")
                        </span>
                    }
                </div>
                <div class="form-group has-feedback">
                    <input name="newpassword2" type="password" class="form-control" placeholder="Enter New Password Again" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @if (ViewData.ModelState.ContainsKey("NewPassword2"))
                    {
                        <span class="has-error text-danger">
                            @Html.ValidationMessage("NewPassword2")
                        </span>
                    }
                </div>
                <div class="row">
                    <div class="col-xs-4">

                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button href="#" type="submit" class="btn btn-primary btn-block btn-flat">Accept</button>
                    </div>
                    <div class="col-xs-4">
                        <a href="~/Dashboard/Index" class="btn btn-danger btn-block btn-flat">Cancle</a>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <!-- /.social-auth-links -->

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Themes/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Themes/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' /* optional */
        });
      });
    </script>
</body>
</html>

