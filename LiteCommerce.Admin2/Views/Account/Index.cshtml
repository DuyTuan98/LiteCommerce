                    <div class="@if (ViewBag.ActionRequest == "UpdateInfos"){
                                @:active
                            } tab-pane" id="settings">
                        <form class="form-horizontal" action="~/Account/Index" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="actionRequest" value="UpdateInfos" />
                            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                            <div class="form-group">
                                <label class="col-sm-2 control-label">First name</label>
                                <div class="col-sm-10">
                                    <input type="text" name="FirstName" class="form-control" placeholder="First name" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.FirstName } else { @Model.FirstName }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_FirstName"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_FirstName")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Last name</label>
                                <div class="col-sm-10">
                                    <input type="text" name="LastName" class="form-control" placeholder="Last name" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.LastName } else { @Model.LastName }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_LastName"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_LastName")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Title" class="form-control" placeholder="Title" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.Title } else { @Model.Title }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_Title"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_Title")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Birth day</label>
                                <div class="col-sm-10">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" name="BirthDate" class="form-control pull-right" id="datepicker_bỉrthdate" data-date-format="yyyy-mm-dd" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.BirthDate.ToString("yyyy-MM-dd") } else { @Model.BirthDate.ToString("yyyy-MM-dd") }">
                                    </div>
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_BirthDate"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_BirthDate")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Address" class="form-control" placeholder="Address" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.Address } else { @Model.Address }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_Address"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_Address")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">City</label>
                                <div class="col-sm-10">
                                    <input type="text" name="City" class="form-control" placeholder="City" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.City } else { @Model.City }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_City"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_City")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Country</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="Country">
                                        <option value="">- select country -</option>
                                        @foreach (var item in listCountries)
                                        {
                                            if ((ViewBag.FakeEmployee == null && item.Value == Model.Country) || (ViewBag.FakeEmployee != null && item.Value == ViewBag.FakeEmployee.Country))
                                            {
                                                <option value="@item.Value" selected>@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_Country"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_Country")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Home phone</label>
                                <div class="col-sm-10">
                                    <input type="text" name="HomePhone" class="form-control" placeholder="Home phone" value="@if (ViewBag.FakeEmployee != null) { @ViewBag.FakeEmployee.HomePhone } else { @Model.HomePhone }">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_HomePhone"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_HomePhone")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Photo path</label>
                                <div class="col-sm-10">
                                    <input type="file" class="text form-control " name="PhotoPathFile" placeholder="Select photo">
                                    @if (ViewData.ModelState.Keys.Contains("UpdateInfos_PhotoPath"))
                                    {
                                        <span class="text-danger">@Html.ValidationMessage("UpdateInfos_PhotoPath")</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
